<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :remark_description, class: "control-label" %>
    <%= text_input f, :remark_description, class: "form-control" %>
    <%= error_tag f, :remark_description %>
  </div>

  <div class="form-group">
    <%= label f, :target_category, class: "control-label" %>
    <%= text_input f, :target_category, class: "form-control" %>
    <%= error_tag f, :target_category %>
  </div>

  <div class="form-group">
    <%= label f, :target_item, class: "control-label" %>
    <%= text_input f, :target_item, class: "form-control" %>
    <%= error_tag f, :target_item %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
